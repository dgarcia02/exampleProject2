<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include ('../partials/head.ejs') %>
    </head>
    <body>
        <%- include ('../partials/header.ejs') %>

        <div class="container">
            <h1>Edit Post</h1>
            <main>
                <form action="/posts/<%=post.id%>?_method=PUT" method="POST">
                    <label for="img">Photo:</label>
                    <input type="url" name="img" value="<%=post.img%>" id="img" />
                    <br>
                    <label for="postText">Caption:</label>
                    <textarea name="postText"><%=post.postText%></textarea>
                    <br>
                    <label for="feeling">Feeling:</label>
                    <input type="text" value="<%=post.feeling%>">
                    <br>
                    <input type="submit" value="Update Post">
                </form>
            </main>
        </div>
        <footer>
            <%- include ('../partials/footer.ejs') %>
        </footer>
    </body>
</html>
