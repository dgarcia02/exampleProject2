<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include ('../partials/head.ejs') %>
    </head>
    <body>
        <!-- header and nav partial -->
        <%- include ('../partials/header.ejs') %>
        <div class="container">
            <h3>New Post</h3>

            <main>
                <form action="/posts" method="POST" style="width: 60%; margin: auto;">
                    <!-- name is the document property that determines the community member -->
                        <!-- double check if communityId is right -->
                    <select class="form-select" aria-label="Default select example" name="communityId">
                        <!-- looping through all the commumnity members profiles -->
                        <% for (let i = 0; i < members.length; i++) { %>
                            <!-- id is members specified object id -->
                            <option value="<%=members[i]._id%>"><%=members[i].name%></option>
                        <% } %>
                    </select>
                    <br>
                    <!-- post photo -->
                    <label for="img">Photo:</label>
                    <input type="text" name="img" id="img" />
                    <br>
                    <!-- post caption -->
                    <label for="caption">Caption:</label>
                    <textarea name="caption"></textarea>
                    <br>
                    <!-- feeling -->
                    <label for="feeling">How did that workout feel?</label>
                    <select class="form-select" aria-label="Default select example" name="feeling">
                        <option value="Amazing! &#128516;">Amazing! &#128516;</option>
                        <option value="Great! &#128512;">Great! &#128512;</option>
                        <option value="Good! &#128524;">Good! &#128524;</option>
                        <option value="Tired! &#128555;">Tired! &#128555;</option>
                        <option value="I can't feel my legs! &#128565;">I can't feel my legs! &#128565;</option>
                    </select>
                    <br>

                    <!-- point system activity -->
                    <label for="pointSystem.activity">What was your activity?</label>
                        <select class="form-select" aria-label="Default select example" name="pointSystem.activity">
                            <option value="Active Sport">Active Sport</option>
                            <option value="Biking">Biking</option>
                            <option value="Boot Camp">Boot Camp</option>
                            <option value="Exercise Class">Exercise Class</option>
                            <option value="Hiking">Hiking</option>
                            <option value="Jump Rope">Jump Rope</option>
                            <option value="Run or Jog">Run or Jog</option>
                            <option value="Steps">Steps</option>
                            <option value="Strength Training">Strength Training</option>
                            <option value="Swimming">Swimming</option>
                            <option value="Walk">Walk</option>
                        </select>
                    <br>
                    <!-- point system amount -->
                    <label for="pointSystem.amount">How long was your workout?</label>
                    <select class="form-select" aria-label="Default select example" name="pointSystem.amount">
                        <option value="5 Minutes">5 Minutes</option>
                        <option value="10 Minutes">10 Minutes</option>
                        <option value="15 Minutes">15 Minutes</option>
                        <option value="20 Minutes">20 Minutes</option>
                        <option value="30 Minutes">30 Minutes</option>
                    </select>
                    <br>

                    <!-- points earned -->
                    <label for="points">Points Earned:</label>
                        <input class="form-control" type="text" name="points" value="5" aria-label="Disabled input example" disabled readonly/>

                    <input type="submit" value="Post">
                </form>
            </main>

        </div>

        <!-- <script type="module">
            import { Toast } from 'bootstrap.esm.min.js'

            Array.from(document.querySelectorAll('.toast'))
            .forEach(toastNode => new Toast(toastNode))
        </script> -->

    </body>
</html>
