<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include ('../partials/head.ejs') %>
    </head>
    <body>
        <h1>posts/ feed</h1>

        <button type="button" name="button"><a href="/posts/new">New Post</a></button>
        <ul>
            <% for (let i = 0; i < posts.length; i++) { %>
                <div class="entry">

                        <img src="<%=posts[i].img%>" alt="photo">
                        <p><%=posts[i].postText%></p>
                        <p><%=posts[i].feeling%></p>
                        <p><%=posts[i].points%></p>
                        <p><%=posts[i].postDate%></p>
                        <section>
                            <form action="/posts/<%=posts[i]._id%>?_method=DELETE" method="POST">
                                <input type="submit" value="Delete Post" />
                            </form>
                            <a href="/posts/<%=posts[i]._id%>/edit">Edit Post</a>
                        </section>
                </div>
            <% } %>
        </ul>
    </body>
</html>
