<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include ('../partials/head.ejs') %>
    </head>
    <body>
        <!-- header and nav partial -->
        <%- include ('../partials/header.ejs') %>

        <div class="container">
            <h3 class="indexTitle">Feed</h3>
            <ul>
                <% for (let i = 0; i < posts.length; i++) { %>
                    <div class="entry">
                        <img src="<%=posts[i].img%>" alt="photo" class="feed-pics">
                        <div class="content">
                            <p class="feed-text"><%=posts[i].caption%></p>
                            <p class="feed-text"><b>Feeling?</b> <%=posts[i].feeling%></p>
                            <p class="feed-text"><b>Activity:</b> </p>
                            <p class="feed-text"><b>Points Earned:</b> <%=posts[i].points%></p>
                            <p class="feed-text"><%=posts[i].postDate%></p>
                            <!-- edit and delete buttons -->
                            <div class="feed-btns">
                                <form action="/posts/<%=posts[i]._id%>?_method=DELETE" method="POST" >
                                    <input type="submit" value="Delete" class="btn btn-outline-secondary feed-delete"/>
                                </form>
                                <a href="/posts/<%=posts[i]._id%>/edit"><button type="button" class="btn btn-outline-secondary">Edit</button></a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </ul>
        </div>
        <footer>
            <%- include ('../partials/footer.ejs') %>
        </footer>
    </body>
</html>
