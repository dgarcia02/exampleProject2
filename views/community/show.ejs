<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include ('../partials/head.ejs') %>
    </head>
    <body>
        <!-- header and nav partial -->
        <%- include ('../partials/header.ejs') %>

        <div class="container">
            <div class="profileInfo">
                <img src="<%= member.img %>" alt="" class="showProfilePic">
                <section class="about">
                    <h2><%= member.name %></h2>
                    <h4><%= member.pronouns %></h4>
                    <!-- <h4>Points: <%= member.points %></h4> -->
                    <!-- Edit Button -->
                    <button type="button" name="button" class="edit-btn"><a href="/community/<%=member._id%>/edit" class="edit-btnLetters">Edit Profile</a></button>
                </section>
            </div>

            <!-- Delete Button -->
            <form class="delete" action="/community/<%=member.id%>?_method=DELETE" method="POST">
                <input type="submit" value="Delete Profile" class="delete-btn">
            </form>

            <!-- <section>
                <h2>Posts:</h2>
                <ul>
                    <li>

                    </li>
                </ul>
            </section> -->

        </div>
        <footer>
            <%- include ('../partials/footer.ejs') %>
        </footer>
    </body>
</html>
