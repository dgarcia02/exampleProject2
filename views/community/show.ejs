<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%- include ('../partials/head.ejs') %>
    </head>
    <body>
        <!-- header and nav partial -->
        <%- include ('../partials/header.ejs') %>
        <div class="container">
            <div class="profileInfo row">
                <div class="col">
                    <img src="<%=member.img%>" alt="" class="showProfilePic">
                </div>
                <div class="col text-center align-self-center">
                    <h3><%=member.name%></h3>
                    <h6 id="pronouns"><%=member.pronouns%></h6>
                    <h6>Points: <%=member.points%></h6>
                    <h6>Posts# <% for (let i = 0; i < member.posts.length; i++) { %>
                            <%=i%>
                    <% } %></h6>
                </div>
                <div class="col text-end">
                    <!-- Edit Button -->
                    <button type="button" name="button" class="edit-btn btn btn-light"><a href="/community/<%=member._id%>/edit" class="edit-btnLetters">Edit Profile</a></button>
                    <!-- Delete Profile Button -->
                    <form class="delete" action="/community/<%=member.id%>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete Profile" class="delete-btn btn btn-light">
                    </form>
                </div>
            </div>

            <div class="postsSection">
                <h5 class="show-post">Posts:</h5>
                <ul class="row">
                    <% for (let i = 0; i < member.posts.length; i++) { %>
                        <li class="col-4">
                            <img src="<%=member.posts[i].img%>" alt="photo" class="showPictures">
                            <p><%=member.posts[i].caption%></p>
                            <p><%=member.posts[i].feeling%></p>
                            <p><%=member.posts[i].postDate%></p>
                            <a href="/posts/<%=member.posts[i]._id%>/edit"><button type="button" class="btn btn-outline-secondary">Edit</button></a>
                        </li>
                    <% } %>
                </ul>
            </div>

        </div>
        <footer>
            <%- include ('../partials/footer.ejs') %>
        </footer>
    </body>
</html>
